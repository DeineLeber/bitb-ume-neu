---
pagination:
    data: galleries.main
    size: 1
    alias: img
permalink: "gallery/main/{{ img.path | basefilename | slug }}/"
returnToPath: "/elemente/#gallery"
eleventyComputed:
    title: "{{ img.alt | default('Image', true) }}"
---
<div class="container mx-auto xl:max-w-screen-xl px-2 sm:px-6 mb-20">
	<nav class="mb-2">
		<a href="{{ returnToPath }}">← Back to gallery</a>
	</nav>

	<img src="/{{ img.path }}" alt="{{ img.alt }}" >
	<p>{{ img.alt }}</p>

	<nav class="mb-2 flex gap-x-5">
		{% if pagination.href.previous %}
			<a href="{{ pagination.href.previous }}">← Previous</a>
		{% endif %}
		{% if pagination.href.next %}
			<a href="{{ pagination.href.next }}">Next →</a>
		{% endif %}
	</nav>
</div>
